extends layout

block content
  each article in articles

    .row.post
      .box
        .col-lg-12
          hr
          a(href=article.url)
            h1.intro-text.text-center= article.title
              br
              small= moment.utc(article.date).format('DD. MMMM YYYY')
          hr

          | !{ typogr(article.intro).typogrify() }
          if article.hasMore
            p.more
              a(href=article.url) more

block prepend footer
  div.nav
    if prevPage
      a(href=prevPage.url) « Newer
    else
      a(href='/archive.html') « Archives
    if nextPage
      a(href=nextPage.url) Next page »
