doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      | !{ livereloadScript }
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name

      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=PT+Sans:400italic,400,700')
      link(rel='stylesheet', href='/css/main.css')

      | <!--[if lt IE 9]>
      script(src='vendor/html5shiv/dist/html5shiv.min.js')
      script(src='vendor/html5shiv/dest/respond.min.js')
      | <![endif]-->

    script(src='/vendor/jquery/jquery.min.js')
    script(src='/vendor/underscore/underscore.js')
    script(src='/js/main.js')

  body(class=bodyclass)

    .landing
      a.brand(href='/')
        img(src='/img/' + locals.logo)
        = locals.title
      .tagline-bar
        = locals.tagline
    .navbar.navbar-default(role='navigation')
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/')
            img(src='/img/' + locals.logo)
            = locals.title
        .navbar-collapse.collapse
          ul.nav.navbar-nav
            li
              a(href='/blog.html') Blog
            li
              a(href='/about.html') About
            li
              a(href='/projects.html') Projects

      header.header
        div.content-wrap
          block header
            div.logo
              h1
                a(href=locals.url)= locals.name
              p.description= locals.description


    div#content
      div.content-wrap
        block content
          h2 Welcome to zombocom!
    footer
      div.content-wrap
        block footer
          section.about
            !=contents['about.md'].html
          section.copy
            p &copy; #{ new Date().getFullYear() } #{ locals.owner } &mdash; powered by&nbsp;
              a(href='https://github.com/jnordberg/wintersmith') Wintersmith
              //- please leave the "powered by" if you use the design
