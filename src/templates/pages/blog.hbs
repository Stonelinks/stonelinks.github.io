{{#compose src="src/templates/posts/*.md"}}
  <div class="row">
    <div class="box">
      <div class="col-lg-12">
        <hr>
        <a href="/{{@basename}}.html">
        <h1 class="intro-text text-center">{{@title}}
        <br/>
        <small>{{formatDate @date "%m/%d/%Y"}}</small>
        </h1></a>
        <hr>
        {{#markdown}}{{@content}}{{/markdown}}
      </div>
    </div>
  </div>
{{/compose}}
