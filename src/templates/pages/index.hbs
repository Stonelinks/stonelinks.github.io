---
title: Home
layout: base.hbs
---

<style>
  * {
    margin: 0;
    padding: 0;
  }
  
  html,
  body {
    width: 100%;
    height: 100%;
  }
  
  canvas {
    display: block;
  }

  .landing-wrapper {
    position: absolute;
    top: 2px;
    left: 0px;
    width: 100%;
  }

  .navbar-brand {
    width: 315px;
    margin-bottom: 10px;
  }

  .navbar-brand img {
    margin-top: -2px;
  }
</style>

<div class="landing-wrapper">

<div class="top-padding">
</div>

<div class="landing">
  <a href="{{relative page.dest "dist/index.html"}}" class="brand"><img src="{{ assets }}/img/{{ site.logo }}"> {{ site.title }}</a>
  <div class="tagline-bar">{{ site.tagline }}</div>
</div>

<div class="landing-navbar-wrapper">
  <div class="navbar navbar-default" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <a class="navbar-brand" href="{{relative page.dest "dist/index.html"}}">
          <img src="{{ assets }}/img/{{ site.logo }}">
          {{ site.title }}<br/>
          <small class="text-muted">{{ site.tagline }}</small>
        </a>
      </div>
      <div>
        <ul class="nav navbar-nav">
          <li>
            <a href="/blog.html">Blog</a>
          </li>
          <li>
            <a href="/about.html">About</a>
          </li>
          <li>
            <a href="/projects.html">Projects</a>
          </li>
        </ul>
      </div>
    </div>
  </div>
  {{> footer }}
</div>

<div class="bottom-padding">
</div>

</div>


<canvas id="canvas"></canvas>
