---
layout: default.hbs
---

<div class="row post">
  <div class="box">
    <div class="col-lg-12">
      <hr>
      <a id="{{page.basename}}" href="/posts/{{page.basename}}.html">
      <h1 class="intro-text text-center">{{page.title}}
      <br/>
      <small>{{formatDate page.date "%m/%d/%Y"}}</small>
      </h1></a>
      <hr>
      {{> body }}
    </div>
  </div>
</div>
