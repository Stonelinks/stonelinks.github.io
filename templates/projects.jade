extends layout

block append head
  script(src='/vendor/isotope/dist/isotope.pkgd.js')
  script(src='/vendor/isotope-packery/packery-mode.pkgd.js')

block content
  #projects.project-row
    each project in page.metadata.projects
      .project-box
        hr
        a(href='/projects/' + project.id + '/index.html')
          h3.intro-text.text-center
            | !{ typogr(project.name).typogrify() }
        hr
        a(href='/projects/' + project.id + '/index.html')
          img(src='/img/' + project.image)
        p
          | !{ typogr(project.desc).typogrify() }
    .grid-sizer
    .gutter-sizer
