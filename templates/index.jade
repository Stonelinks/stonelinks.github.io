extends base

block append head
  style.
    * {
      margin: 0;
      padding: 0;
    }
    
    html,
    body {
      width: 100%;
      height: 100%;
    }
    
    canvas {
      display: block;
    }
    
    .landing-wrapper {
      position: absolute;
      top: 2px;
      left: 0px;
      width: 100%;
    }
    
    .navbar-brand {
      width: 315px;
      margin-bottom: 10px;
    }
    
    .navbar-brand img {
      margin-top: -2px;
    }

block body
  .landing-wrapper
    .top-padding
    .landing
      a.brand(href='/')
        img(src='/img/' + locals.logo)
        = locals.title
      .tagline-bar
        = locals.tagline

    .landing-navbar-wrapper
      .navbar.navbar-default(role='navigation')
        .container
          .navbar-header
            a.navbar-brand(href='/')
              img(src='/img/' + locals.logo)
              = locals.title
              br
              small.text-muted
                = locals.tagline
          div
            ul.nav.navbar-nav
              li
                a(href='/blog.html') Blog
              li
                a(href='/about.html') About
              li
                a(href='/projects.html') Projects
      footer
        .container
          .row
            .col-lg-12.text-center
              each network in locals.social_networks
                a.social(href=network.link, target='_blank')
                  i(class='fa fa-'+ network.name)
              a.footer-link(href='/contact.html')
                | contact
    .bottom-padding
  canvas#canvas
