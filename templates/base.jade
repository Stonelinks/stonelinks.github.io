doctype html
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      | !{ livereloadScript }
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.site.title
      
      link(rel='icon', href='/img/favicon.ico', type='image/x-icon')
      link(rel='shortcut icon', href='/img/favicon.ico', type='image/x-icon')

      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.site.tagline)
      link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=PT+Sans:400italic,400,700')
      link(rel='stylesheet', href='/css/main.css')

      | <!--[if lt IE 9]>
      script(src='/vendor/html5shiv/dist/html5shiv.min.js')
      script(src='/vendor/html5shiv/dest/respond.min.js')
      | <![endif]-->

      script(src='/vendor/jquery/jquery.min.js')
      script(src='/vendor/underscore/underscore.js')
      script(src='/vendor/bootstrap/dist/js/bootstrap.min.js')
      script(src='/js/main.js')
      script(type='text/javascript')
        - var images = _.map(grunt.file.expand('./contents/img/backgrounds/*.{png,jpg,JPG}'), function(i) {
        -   return i.replace('./contents', '');
        - });
        | var BG_IMAGES = ["!{images.join('","')}"];
        | var BASENAME = '!{page && page.filename ? page.filename.substr(0, page.filename.lastIndexOf('.')) : 'none'}';
        | 
        | var _gaq = _gaq || [];
        | _gaq.push(['_setAccount', 'UA-18750328-2']);
        | _gaq.push(['_trackPageview']);
        | 
        | (function() {
        |   var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        |   ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        |   var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        | })();

  body
    block body
      
