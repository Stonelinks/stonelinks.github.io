extends layout

block content
  .row.post
    .box
      .col-lg-12
        hr
        a(href=page.url)
          h1.intro-text.text-center= page.title
            br
            small= moment.utc(page.date).format('DD. MMMM YYYY')
        hr
        | !{ typogr(page.html).typogrify() }

  .row.tag-row
    .box
      .col-lg-12
        - var tags = env.helpers.getTagsFromArticle(page)
        if tags.length
          p
            | Tags: 
            each tag in tags
              a(href=env.helpers.getTagHome(tag).url)
                span.label.label-default.tag= tag

