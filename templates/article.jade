extends layout

block content
    .box-row
        .row
            .box
                .col-lg-12
                    a(href=page.url)
                        h1.box-title= page.title
                    - var tags = env.helpers.getTagsFromArticle(page)
                    .byline
                        if tags.length
                            p
                                | Published in
                                each tag in tags
                                    a(href=env.helpers.getTagHome(tag).url)
                                        span.label.label-primary.tag= tag

                        p
                            = moment.utc(page.date).format('MMMM DD, YYYY')
                            |  by&nbsp;
                            a(href="/luke.html")
                                | Lucas Doyle
                    .external-links
                        | !{ typogr(page.html).typogrify() }

        .row
            .box
                .col-lg-12.footer-nav
                    a(href=contents.index.url)
